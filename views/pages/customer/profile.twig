{% extends "layouts/master.twig" %}
{% block content %}
<div class="container">
    <h2 class="title" style="margin-top: 30px;">حسابي</h2>
    <section class="section fade-up">
        <div class="panel" style="padding:30px;">
            <h3 style="color:var(--rose-dark); margin-bottom:15px;">معلوماتي</h3>
            <p><strong>الاسم:</strong> {{ customer.name }}</p>
            <p><strong>البريد الإلكتروني:</strong> {{ customer.email }}</p>
            <p><strong>رقم الجوال:</strong> {{ customer.phone }}</p>
            <hr class="separator" />
            <div style="display:flex; flex-direction:column; gap:12px; margin-top:20px;">
                <a href="/customer/orders" class="btn btn-outline-gold" style="text-align:right;">
                    طلباتي
                </a>
                <a href="/customer/wishlist" class="btn btn-outline-gold" style="text-align:right;">
                    المفضلة
                </a>
                <a href="/customer/notifications" class="btn btn-outline-gold" style="text-align:right;">
                    الإشعارات
                </a>
                <a href="/customer/addresses" class="btn btn-outline-gold" style="text-align:right;">
                    عناويني
                </a>
                <a href="/logout" class="btn btn-primary" style="margin-top:10px; background:var(--rose-dark);">
                    تسجيل الخروج
                </a>
            </div>
        </div>
    </section>
</div>
{% endblock %}
