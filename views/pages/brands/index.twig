{% extends "layouts/master.twig" %}
{% block content %}
<div class="container">
    <h2 class="title" style="margin-top:30px;">
        العلامات التجارية
    </h2>
    {% if brands|length == 0 %}
        <div class="panel" style="margin-top:20px; text-align:center;">
            <p>لا توجد علامات تجارية حالياً.</p>
        </div>
    {% else %}
        <section class="section fade-up">
            <div style="
                display:grid;
                grid-template-columns:repeat(auto-fill, minmax(200px, 1fr));
                gap:22px;
            ">
                {% for brand in brands %}
                    <a href="/brands/{{ brand.slug }}"
                       class="panel"
                       style="
                           padding:25px;
                           text-align:center;
                           border-radius:20px;
                           transition:0.3s ease;
                       ">
                        {% if brand.image %}
                            <img src="{{ brand.image }}"
                                 alt="{{ brand.name }}"
                                 style="width:100%; height:110px; object-fit:contain; margin-bottom:12px;">
                        {% endif %}
                        <div style="
                            font-size:18px;
                            font-weight:700;
                            color:var(--rose-dark);
                        ">
                            {{ brand.name }}
                        </div>
                    </a>
                {% endfor %}
            </div>
        </section>
    {% endif %}
</div>
{% endblock %}
