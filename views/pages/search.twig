{% extends "layouts/master.twig" %}
{% block content %}
<div class="container">
    <h2 class="title" style="margin-top:30px;">
        نتائج البحث عن: <span style="color:var(--rose-dark)">{{ query }}</span>
    </h2>
    {% if products|length == 0 %}
        <div class="panel" style="margin-top:20px; text-align:center;">
            <p>لم يتم العثور على نتائج للبحث.</p>
            <a class="btn btn-primary" href="/products">تصفّح المنتجات</a>
        </div>
    {% else %}
        <p style="margin:10px 0 25px; color:#777;">
            عدد النتائج: {{ products|length }}
        </p>
        <section class="section fade-up">
            <div class="products-grid">
                {% for product in products %}
                    {% include "components/product/card.twig" with { product: product } %}
                {% endfor %}
            </div>
        </section>
    {% endif %}
</div>
{% endblock %}
