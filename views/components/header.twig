<header>
    <div class="header-top"></div>
    <div class="container">
        <div class="header">
            <nav class="nav nav-desktop">
                {% for link in store.menu %}
                    <a href="{{ link.url }}">{{ link.title }}</a>
                {% endfor %}
            </nav>
            <div class="brand">
                {{ store.name }}
            </div>
            <div class="icons">
                <a href="/search" class="icon-btn" aria-label="بحث">
                    <svg width="22" height="22" viewBox="0 0 24 24" fill="none">
                        <circle cx="11" cy="11" r="7" stroke="currentColor" stroke-width="2"/>
                        <line x1="16.5" y1="16.5" x2="21" y2="21" stroke="currentColor" stroke-width="2"/>
                    </svg>
                </a>
                <a href="/customer" class="icon-btn" aria-label="الحساب">
                    <svg width="22" height="22" viewBox="0 0 24 24" fill="none">
                      <circle cx="12" cy="8" r="4" stroke="currentColor" stroke-width="2"/>
                      <path d="M4 20c1.5-4 4-6 8-6s6.5 2 8 6"
                        stroke="currentColor" stroke-width="2" fill="none"/>
                    </svg>
                </a>
                <a href="/cart" class="icon-btn" aria-label="السلة">
                    <svg width="22" height="22" viewBox="0 0 24 24" fill="none">
                        <path d="M6 6h14l-2 10H8L6 6z" stroke="currentColor" stroke-width="2"/>
                        <circle cx="9" cy="20" r="1.5" fill="currentColor"/>
                        <circle cx="17" cy="20" r="1.5" fill="currentColor"/>
                    </svg>
                </a>
                <button class="icon-btn mobile-toggle" onclick="document.body.classList.toggle('mobile-nav-open')">
                    <svg width="22" height="22" viewBox="0 0 24 24" fill="none">
                        <line x1="4" y1="7" x2="20" y2="7" stroke="currentColor" stroke-width="2"/>
                        <line x1="4" y1="12" x2="20" y2="12" stroke="currentColor" stroke-width="2"/>
                        <line x1="4" y1="17" x2="20" y2="17" stroke="currentColor" stroke-width="2"/>
                    </svg>
                </button>
            </div>
        </div>
    </div>
    <div class="mobile-nav">
        <div class="mobile-nav-inner">
            <div class="mobile-nav-header">
                <span>{{ store.name }}</span>
                <button class="close-btn" onclick="document.body.classList.remove('mobile-nav-open')">
                    ✕
                </button>
            </div>
            <div class="mobile-links">
                {% for link in store.menu %}
                    <a href="{{ link.url }}">{{ link.title }}</a>
                {% endfor %}
            </div>
        </div>
    </div>
</header>
