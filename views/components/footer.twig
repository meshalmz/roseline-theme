<footer class="footer">
    <div class="container">
        <div class="brand">
            {{ store.name }}
        </div>
        <div class="links">
            {% for link in store.menu %}
                <a href="{{ link.url }}">{{ link.title }}</a>
            {% endfor %}
        </div>
        <div class="socials">
            {% if store.social.facebook %}
                <a href="{{ store.social.facebook }}" target="_blank">
                    <svg width="22" height="22" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M9 8h2V6c0-.9.6-2 2.2-2H16v3h-2c-.4 0-.7.3-.7.7V8h2.7l-.4 3H13v8h-3v-8H8V8h1z"/>
                    </svg>
                </a>
            {% endif %}
            {% if store.social.instagram %}
                <a href="{{ store.social.instagram }}" target="_blank">
                    <svg width="22" height="22" fill="none" stroke="currentColor" stroke-width="2">
                        <rect x="4" y="4" width="14" height="14" rx="4"/>
                        <circle cx="11" cy="11" r="3"/>
                    </svg>
                </a>
            {% endif %}
            {% if store.social.twitter %}
                <a href="{{ store.social.twitter }}" target="_blank">
                    <svg width="22" height="22" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M21 5.8a8 8 0 0 1-2.3.6 3.8 3.8 0 0 0 1.7-2.1 7.7 7.7 0 0 1-2.5 1 3.8 3.8 0 0 0-6.5 3.4A10.8 10.8 0 0 1 3 4.8a3.8 3.8 0 0 0 1.2 5 3.7 3.7 0 0 1-1.7-.5v.1a3.8 3.8 0 0 0 3 3.7 3.8 3.8 0 0 1-1.7.1 3.8 3.8 0 0 0 3.5 2.6A7.7 7.7 0 0 1 3 18.2a10.8 10.8 0 0 0 5.8 1.7c7 0 10.8-6 10.8-11.3v-.5A7.7 7.7 0 0 0 21 5.8z"/>
                    </svg>
                </a>
            {% endif %}
        </div>
        <div class="copy">
            جميع الحقوق محفوظة © {{ "now"|date("Y") }} — {{ store.name }}
        </div>
    </div>
</footer>
